# ==============================================================================
# Conda 配置文件 (.condarc)
# 针对中国大陆用户优化，适用于个人开发者和企业用户
# ==============================================================================

# ------------------------------------------------------------------------------
# 包源配置 (默认使用中国镜像源)
# ------------------------------------------------------------------------------
channels:
  # 阿里云镜像（商业级稳定性，优先使用）
  - https://mirrors.aliyun.com/anaconda/cloud/conda-forge/
  - https://mirrors.aliyun.com/anaconda/pkgs/main/
  - https://mirrors.aliyun.com/anaconda/pkgs/free/
  - https://mirrors.aliyun.com/anaconda/pkgs/r/
  # 清华大学镜像（备用）
  - https://mirrors.tuna.tsinghua.edu.cn/anaconda/cloud/conda-forge/
  - https://mirrors.tuna.tsinghua.edu.cn/anaconda/pkgs/main/
  - https://mirrors.tuna.tsinghua.edu.cn/anaconda/pkgs/free/
  # conda-forge 官方（最新包支持）
  - conda-forge
  # 默认源（兜底）
  - defaults

# 源优先级策略：严格模式，避免版本冲突
channel_priority: strict

# 显示包的下载源，便于调试
show_channel_urls: true

# ------------------------------------------------------------------------------
# 性能优化配置
# ------------------------------------------------------------------------------

# 使用 libmamba 求解器（更快的依赖解析）
# 注意：需要先安装 conda-libmamba-solver
solver: libmamba

# 并发下载数量（提高下载速度）
default_threads: 4

# 包缓存保留策略（不自动删除，手动清理）
always_yes: false

# 包格式偏好（.conda 格式更快）
use_only_tar_bz2: false

# ------------------------------------------------------------------------------
# 网络和连接配置（中国网络环境优化）
# ------------------------------------------------------------------------------

# SSL 验证（保持安全性）
ssl_verify: true

# 网络超时设置（适应国内网络环境）
remote_connect_timeout_secs: 30.0
remote_read_timeout_secs: 120.0
remote_max_retries: 5

# 代理设置（如需要，取消注释并配置）
# proxy_servers:
#   http: http://proxy.company.com:8080
#   https: https://proxy.company.com:8080

# ------------------------------------------------------------------------------
# 存储和缓存配置
# ------------------------------------------------------------------------------

# 包缓存目录（使用默认位置，便于管理）
# pkgs_dirs:
#   - ~/.conda/pkgs

# 环境存储目录（使用默认位置）
# envs_dirs:
#   - ~/.conda/envs

# 缓存压缩包（节省空间但降低安装速度）
# use_pip: true

# ------------------------------------------------------------------------------
# 用户体验配置
# ------------------------------------------------------------------------------

# 不自动激活 base 环境（避免污染系统环境）
auto_activate_base: false

# 显示进度条
show_progress_bar: true

# 升级时显示变更内容
show_banner: true

# 自动更新 conda（保持工具最新）
auto_update_conda: true

# 环境变量设置
changeps1: true

# ------------------------------------------------------------------------------
# pip 集成配置
# ------------------------------------------------------------------------------

# 启用 pip 互操作（支持 conda 和 pip 混用）
pip_interop_enabled: true

# 创建 Python 环境时自动安装 pip
add_pip_as_python_dependency: true

# pip 只从 PyPI 安装（避免版本冲突）
# pip_interop_enabled: true

# ------------------------------------------------------------------------------
# 安全和隐私配置（企业友好）
# ------------------------------------------------------------------------------

# 禁用错误报告（保护隐私）
report_errors: false

# 禁用使用统计收集
allow_conda_downgrades: false

# 禁用自动上传到 anaconda.org
anaconda_upload: false

# 安全检查级别（推荐保持启用）
safety_checks: warn

# 不允许软链接包（提高安全性）
allow_softlinks: false

# ------------------------------------------------------------------------------
# 开发者配置
# ------------------------------------------------------------------------------

# 启用实验性功能（可选，谨慎使用）
# experimental:
#   - jlap

# 调试模式（开发时启用）
# verbosity: 2

# 禁用包签名验证（仅在内网环境使用）
# package_verification: false

# ------------------------------------------------------------------------------
# 企业环境配置（可选）
# ------------------------------------------------------------------------------

# 企业内部源（示例，根据实际情况配置）
# custom_channels:
#   internal: http://internal-conda.company.com

# 禁用多线程（某些企业网络环境需要）
# repodata_threads: 1

# 强制使用特定 Python 版本（企业标准化）
# pinned_packages:
#   - python=3.10.*

# ------------------------------------------------------------------------------
# 配置说明
# ------------------------------------------------------------------------------
#
# 本配置文件的设计原则：
# 1. 🇨🇳 针对中国大陆网络环境优化
# 2. ⚡ 平衡性能和稳定性
# 3. 🔒 注重隐私和安全
# 4. 🔧 便于维护和调试
# 5. 🏢 兼容企业环境需求
#
# 使用建议：
# - 个人用户：直接使用即可
# - 企业用户：根据网络环境调整源和代理设置
# - 开发者：可启用调试模式获取详细信息
#
# 配合使用：
# - 使用 conda_switch_source() 函数动态切换源
# - 使用 conda_test_connection() 测试网络连接
# - 定期运行 conda_cleanup() 清理缓存
#
# 注意事项：
# - libmamba 求解器需要额外安装：conda install conda-libmamba-solver
# - SSL 证书问题时可临时设置 ssl_verify: false
# - 代理环境需要配置 proxy_servers 部分